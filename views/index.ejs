									</div><!--item_title_date-->
								</div><!--item_wrapper-->
								<div class="item_content"><%= nintendoFeatureArticle.subtitle %></div><!--item_content-->

							</div><!--feature_news_item-->
						</div><!--col-md-7-->
			   			
			   			<div class="col-md-5">
							<div class="media_wrapper">
								<% if(nintendoListArticles && nintendoListArticles.length > 0) { %>
									<% nintendoListArticles.forEach(article => { %>
